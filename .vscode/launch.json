{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug current TS file (tsx)",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/opt/homebrew/bin/node",
      "runtimeArgs": ["--import", "tsx"],
      "program": "${file}",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    }
  ]
}
